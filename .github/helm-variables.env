# Helm Variables Configuration
# This file contains all necessary variables for Helm deployments

# ============================================
# PostgreSQL Configuration
# ============================================
DB_PASSWD=curso2025
DB_USER=postgres
DB_NAME=payments_db
DB_PORT=5432

# ============================================
# API Configuration
# ============================================
API_PASSWD=APi_PASSWD
API_PORT=8000

# ============================================
# Application Configuration
# ============================================
APP_ENV=production
APP_NAME=ms_payments
APP_REPLICA_COUNT=1

# ============================================
# Image Configuration
# ============================================
IMAGE_REPOSITORY=edygc1988/ms_payments
IMAGE_TAG=latest
IMAGE_PULL_POLICY=IfNotPresent

# ============================================
# Resource Limits
# ============================================
RESOURCES_REQUESTS_CPU=250m
RESOURCES_REQUESTS_MEMORY=250Mi
RESOURCES_LIMITS_CPU=1
RESOURCES_LIMITS_MEMORY=250Mi

# ============================================
# Health Check Configuration
# ============================================
STARTUP_PATH=/startup
STARTUP_INITIAL_DELAY=5
LIVENESS_PATH=/liveness
LIVENESS_INITIAL_DELAY=5
READINESS_PATH=/readiness
READINESS_INITIAL_DELAY=5

# ============================================
# HPA Configuration
# ============================================
HPA_ENABLED=true
HPA_MIN_REPLICAS=1
HPA_MAX_REPLICAS=5
HPA_TARGET_CPU_UTILIZATION=80

# ============================================
# Persistence Configuration
# ============================================
PERSISTENCE_ENABLED=true
PERSISTENCE_SIZE=8Gi
PERSISTENCE_STORAGE_CLASS=""

# ============================================
# Service Configuration
# ============================================
SERVICE_TYPE=ClusterIP
SERVICE_PORT=80

# ============================================
# Storage Configuration
# ============================================
STORAGE_CLASS=default
STORAGE_SIZE=8Gi

# ============================================
# Secrets Management
# ============================================
SECRET_CREATE=true
SECRET_NAME=ms-payments-secret

# ============================================
# Namespace Configuration
# ============================================
NAMESPACE=default
# For different environments, use:
# Development: namespace-dev
# Staging: namespace-staging
# Production: namespace-prod
